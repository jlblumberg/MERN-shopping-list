{
  "name": "mern-shopping-list",
  "version": "1.0.0",
  "description": "Shopping list built with the MERN stack",
  "main": "server.js",
  "scripts": {
    "test": "env NODE_ENV=test mocha ./tests/* --exit",
    "start": "env NODE_ENV=development node server.js",
    "server": "env NODE_ENV=development nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlblumberg/MERN-shopping-list.git"
  },
  "author": "Josh Blumberg",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jlblumberg/MERN-shopping-list/issues"
  },
  "homepage": "https://github.com/jlblumberg/MERN-shopping-list#readme",
  "dependencies": {
    "body-parser": "^1.20.1",
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "mongoose": "^5.9.18"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
  }
}
